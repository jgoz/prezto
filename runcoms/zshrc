# Run local yarn/npm binaries as though they are local
function yarn-bin {
  $(yarn bin)/$@
}

npm_globals=(
  gulp
  mocha
  repo
  tsc
  tslint
  typings
  webpack
)

for g in $npm_globals; do
  alias $g="yarn-bin $g"
done


# tabtab source for yarn package
# uninstall by removing these lines or running `tabtab uninstall yarn`
[[ -f /home/johng/.yarn-config/global/node_modules/tabtab/.completions/yarn.zsh ]] && . /home/johng/.yarn-config/global/node_modules/tabtab/.completions/yarn.zsh
