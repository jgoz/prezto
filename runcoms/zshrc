# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

zstyle ':completion:*:*:git:*' script "${ZDOTDIR:-$HOME}/.zsh/git-completion.bash"
fpath=(~/.zsh $fpath)

# Customize to your needs...

export BROWSER="wstart chrome.exe"
export CODE=$HOME/dev
export CLOUDHOME=/mnt/c/Users/johng/Dropbox
export PLI_DEV_DBGVIEW=dbgview
export IGNORE_PAUSE=true
export HUB_CONFIG="$HOME/.config/hub"
export N_PREFIX="$HOME/n"; [[ :$PATH: == *":$N_PREFIX/bin:"* ]] || PATH+=":$N_PREFIX/bin"  # Added by n-install (see http://git.io/n-install-repo).

alias open="wrun explorer"
alias npmv="cat package.json | grep version"
alias sd="wcmd .\Start-Dev.cmd"
alias bs="wcmd .\tools\Build-Debug-Server.cmd"
# eval "$(hub alias -s)"

setopt GLOB_COMPLETE
setopt PUSHD_MINUS
unsetopt NOCLOBBER

# ctrl+left, ctrl+right
bindkey "\e[1;5D" emacs-backward-word
bindkey "\e[1;5C" emacs-forward-word

# ctrl+backspace, ctrl+delete
bindkey "\C-_" backward-kill-word
bindkey "\e[3;5~" kill-word

# alt-backspace
bindkey "\e\d" undo

# home/end
# cursor mode
bindkey "\e[H" beginning-of-line
bindkey "\e[F" end-of-line
# edit mode
bindkey "\e[1~" beginning-of-line
bindkey "\e[4~" end-of-line

#
